{
  "name": "podcast-sharing",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "ts-node-dev --transpile-only --no-notify src/index.ts",
    "build": "yarn clean && yarn generate && tsc",
    "generate": "yarn generate:prisma && yarn generate:nexus && yarn generate:graphql",
    "generate:graphql": "graphql-codegen",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only src/schema",
    "update:db": "export $(cat ../.env | xargs) && prisma db push --preview-feature --force"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/introspection": "^1.17.8",
    "@prisma/cli": "^2.12.1",
    "@types/cheerio": "^0.22.22",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node-fetch": "^2.5.7",
    "@types/ws": "^7.2.7",
    "babel-jest": "^26.6.1",
    "jest": "^26.6.1",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@newrelic/apollo-server-plugin": "^0.1.2",
    "@nexus/schema": "^0.19.2",
    "@prisma/client": "^2.12.1",
    "@types/entities": "^1.1.1",
    "@types/html-to-text": "^6.0.0",
    "apollo-server-express": "^2.19.0",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.2.0",
    "entities": "^2.1.0",
    "env-var": "^6.3.0",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.3.0",
    "html-to-text": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "newrelic": "^7.0.0",
    "nexus-plugin-prisma": "^0.25.0",
    "node-fetch": "^2.6.1",
    "normalize-url": "^5.3.0",
    "oauth-sign": "^0.9.0",
    "podcastdx-client": "^2.4.1",
    "query-string": "^6.13.2",
    "xmlbuilder2": "^2.2.0"
  }
}
